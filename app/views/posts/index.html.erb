<h3>予定一覧</h3>

    <% if flash[:alert] %>
    <p class="notice"><%= flash[:alert] %></p>
    <% end %>

    <p><%= link_to "新規追加", :new_post %></p>

    <table>
    <thead>
        <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>終日</th>
        <th>更新日時</th>
        <th>詳細</th>
        <th>編集</th>
        <th>削除</th>
        </tr>
    </thead>

    <tbody>
        <% @posts.each do |post| %>
        <tr>
            <td><%= post.id %></td>
            <td><%= post.title %></td>
            <td><%= post.startDate.strftime("%Y年%m月%d日") %></td>
            <td><%= post.endDate.strftime("%Y年%m月%d日") %></td>
            <td><%= post.allDay %></td>
            <td><%= post.updated_at.to_s(:datetime_jp) %></td>
            <td>
            <%= link_to "詳細", post %>
            </td>
            <td>
            <%= link_to "編集", [:edit,post] %>
            </td>
            <td>
            <%= link_to "削除",post,method: :delete, data: {confirm:"予定を削除しますか？"} %>
            </td>
        </tr>
        <% end %>
    </tbody>
    </table>

    <div>
     <p><%= "予定合計 :#{@posts.count}件" %></p>
     <p><%= "本日の日付 :#{Date.today.strftime("%Y/%m/%d")}" %></p>
    </div>
